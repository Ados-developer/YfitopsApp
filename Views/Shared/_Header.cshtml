<header>
    <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light mb-3 fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Public" asp-action="Artists">YfitopsApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="navbar-collapse collapse justify-content-end">
                <ul class="navbar-nav ">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Index"><i class="fas fa-user"></i></a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" id="signout-form">
                                <button type="submit"><i class="fas fa-sign-out-alt"></i></button>
                            </form>
                        </li>
                    } else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
