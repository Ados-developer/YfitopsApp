@model AlbumViewModel
<div class="text-center">
    <h1>Edit Album</h1>
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    <form asp-action="Edit" method="post" class="form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ArtistId" />
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input class="form-control" asp-for="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <button type="submit" class="hero-btn hero-btn-primary">Edit</button>
        <a asp-action="Index" asp-controller="Album" class="hero-btn hero-btn-primary">Back</a>
    </form>
    <h2>Tracks</h2>
    <a asp-action="Create" asp-controller="Track" asp-route-albumId="@Model.Id" class="hero-btn hero-btn-primary">Add Track</a>
</div>
    <table class="table">
        <colgroup>
            <col style="width: 5%;">
            <col style="width: 75%;">
            <col style="width: 20%;">
        </colgroup>
        <thead>
            <tr class="trRow">
                <th scope="col" class="text-center d-none d-md-table-cell">#</th>
                <th scope="col" class="text-left" style="padding-left:20px;">Title</th>
                <th scope="col" class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var track in Model.Tracks)
            {
                <tr class="trRow">
                    <th class="text-center d-none d-md-table-cell">@track.Id</th>
                    <td class="text-left" style="padding-left:20px;">@track.Title</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-controller="Track" asp-route-id="@track.Id" class="icon-btn icon-btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="Track" asp-route-id="@track.Id" class="icon-btn icon-btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
